<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:title="@string/main_accessibility"
        android:orderingFromXml="false">
    <SwitchPreference
        android:key="pref_accessibility_colorInversion"
        android:title="@string/action_accessibility_color_inversion"
        android:order="10"
        android:persistent="false" />
    <android.support.wearable.preference.AcceptDenySwitchPreference
        android:key="pref_accessibility_largeText"
        android:title="@string/action_accessibility_large_text"
        android:order="20"
        app:showDialogWhenTurningOff="true"
        android:persistent="false" />
    <android.support.wearable.preference.AcceptDenySwitchPreference
        android:key="pref_accessibility_magnification"
        android:title="@string/action_accessibility_magnification"
        android:order="30"
        app:showDialogWhenTurningOff="true"
        android:persistent="false" />
    <Preference
        android:fragment="com.google.android.clockwork.settings.accessibility.tts.TtsFragment"
        android:key="pref_accessibility_tts"
        android:icon="@drawable/ic_cc_settings_text_to_speech"
        android:order="40"
        android:title="@string/tts_settings_title"
        android:persistent="false" />
    <!-- Accessibility Engine list will go over here, ordering will need to be set dynamically -->
    <SwitchPreference
        android:key="pref_accessibility_sideButton"
        android:title="@string/accessibility_power_button"
        android:order="50"
        android:persistent="false" />
</PreferenceScreen>
