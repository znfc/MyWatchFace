<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/tts_engine_settings_section">
    <ListPreference
        android:key="pref_accessibility_tts_engine_language"
        android:icon="@drawable/ic_cc_settings_textsize"
        android:title="@string/tts_default_lang_title"
        android:persistent="false" />
    <Preference
        android:key="pref_accessibility_tts_engine_listenToSample"
        android:icon="@drawable/ic_cc_settings_text_to_speech"
        android:title="@string/tts_play_example_title"
        android:persistent="false" />
    <CheckBoxPreference
        android:key="pref_accessibility_tts_engine_default"
        android:title="@string/tts_engine_set_as_default"
        android:persistent="false" />

</PreferenceScreen>
