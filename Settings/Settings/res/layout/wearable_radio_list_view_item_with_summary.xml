<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <FrameLayout
        android:id="@+id/radio_circle"
        android:layout_width="@dimen/radio_circle_size"
        android:layout_height="@dimen/radio_circle_size"
        android:layout_gravity="center"
        android:background="@drawable/circle_outline">

        <View
            android:id="@+id/radio_circle_inner"
            android:layout_width="@dimen/radio_inner_circle_size"
            android:layout_height="@dimen/radio_inner_circle_size"
            android:layout_gravity="center"
            android:background="@drawable/circle_interior" />

        <ImageView
            android:id="@+id/radio_circle_inner_custom"
            android:layout_width="@dimen/radio_inner_circle_size"
            android:layout_height="@dimen/radio_inner_circle_size"
            android:layout_gravity="center"
            android:visibility="gone" />
    </FrameLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/text_left_margin"
        android:layout_marginRight="@dimen/text_left_margin"
        android:layout_gravity="center"
        android:orientation="vertical" >
        <TextView
            android:id="@+id/item_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/RadioItemTextStyle"/>
        <TextView
            android:id="@+id/item_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/RadioItemTextStyle"
            android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>