<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
            android:paddingTop="?android:dialogPreferredPadding"
            android:paddingBottom="?android:dialogPreferredPadding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <ImageView android:id="@+id/admin_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center|center_vertical"
                android:contentDescription="@null"
                android:scaleType="fitCenter"/>

        <TextView android:id="@+id/admin_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|center_vertical"
                android:paddingLeft="?android:dialogPreferredPadding"
                android:paddingRight="?android:dialogPreferredPadding"
                android:textAppearance="@android:style/TextAppearance.Material.Title"/>

        <TextView android:id="@+id/admin_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dip"
                android:paddingStart="?android:listPreferredItemPaddingStart"
                android:paddingEnd="?android:listPreferredItemPaddingEnd"
                android:textAppearance="@android:style/TextAppearance.Material.Body1"/>

        <TextView android:id="@+id/add_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingStart="?android:listPreferredItemPaddingStart"
                android:paddingEnd="?android:listPreferredItemPaddingEnd"
                android:textAppearance="@android:style/TextAppearance.Material.Body1"/>

        <TextView android:id="@+id/admin_warning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingStart="?android:listPreferredItemPaddingStart"
                android:paddingEnd="?android:listPreferredItemPaddingEnd"
                android:textAppearance="@android:style/TextAppearance.Material.Body1"/>

        <LinearLayout android:id="@+id/admin_policies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="8dp"
                android:paddingStart="?android:listPreferredItemPaddingStart"
                android:paddingEnd="?android:listPreferredItemPaddingEnd"
                android:orientation="vertical"/>

        <TextView android:id="@+id/admin_support_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingStart="?android:listPreferredItemPaddingStart"
                android:paddingEnd="?android:listPreferredItemPaddingEnd"
                android:textAppearance="@android:style/TextAppearance.Material.Body1"/>

        <Button android:id="@+id/action_button"
                android:drawablePadding="8dp"
                android:drawableStart="@drawable/action_accept"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="?android:buttonBarButtonStyle"
                android:gravity="start|center_vertical"
                android:maxLines="2"
                android:textAppearance="@android:style/TextAppearance.Material.Body1"
                android:textAllCaps="false"/>

        <Button android:id="@+id/cancel_button"
                android:drawablePadding="8dp"
                android:drawableStart="@drawable/device_admin_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                style="?android:buttonBarButtonStyle"
                android:gravity="start|center_vertical"
                android:maxLines="2"
                android:text="@string/cancel"
                android:textAppearance="@android:style/TextAppearance.Material.Body1"
                android:textAllCaps="false"/>

        <Button android:id="@+id/uninstall_button"
                android:drawablePadding="8dp"
                android:drawableStart="@drawable/device_admin_delete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                style="?android:buttonBarButtonStyle"
                android:gravity="start|center_vertical"
                android:maxLines="2"
                android:text="@string/uninstall_admin"
                android:textAppearance="@android:style/TextAppearance.Material.Body1"
                android:textAllCaps="false"/>
    </LinearLayout>
</ScrollView>
